<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Icons Library</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link href="{{cssPath}}" rel="stylesheet">
    <style>
        :root {
            --bg: #fafafa;
            --fg: #222;
            --card-bg: #fff;
            --card-border: #ddd;
            --icon-size: 32px;
            --icon-color: #000;
        }

        @media (prefers-color-scheme: dark) {
            :root {
                --bg: #1e1e1e;
                --fg: #eee;
                --card-bg: #2a2a2a;
                --card-border: #444;
                --icon-color: #fff;
            }
        }

        html {
            box-sizing: border-box;
            overflow: auto;
            height: 100vh;
        }

        body {
            height: 100%;
            overflow: auto;

            display: flex;
            flex-direction: column;
            gap: 1rem;

            background-color: var(--bg);
            color: var(--fg);
            opacity: 0.8;
            background-image: radial-gradient(var(--fg) 0.8px, transparent 0.8px),
            radial-gradient(var(--fg) 0.8px, var(--bg) 0.8px);
            background-size: 32px 32px;
            background-position: 0 0, 16px 16px;
            padding: 2rem;
            transition: background 0.3s, color 0.3s;


            &.light {
                --bg: #fafafa;
                --fg: #222;
                --card-bg: #fff;
                --card-border: #ddd;
            }

            &.dark {
                --bg: #1e1e1e;
                --fg: #eee;
                --card-bg: #2a2a2a;
                --card-border: #444;
            }
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        h1 {
            font-size: 1.8rem;
            margin: 0;
        }

        .controls {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        button.toggle,
        select,
        input[type="color"] {
            background: none;
            border: 1px solid var(--card-border);
            padding: 0.3rem 0.6rem;
            border-radius: 0.4rem;
            cursor: pointer;
            color: var(--fg);
            font-size: 0.9rem;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(10rem, 1fr));
            gap: 1rem;
        }

        .icon-card {
            background: var(--card-bg);
            backdrop-filter: blur(10px) saturate(150%) hue-rotate(45deg);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);

            border: 1px solid var(--card-border);
            border-radius: 8px;
            padding: 1rem;
            text-align: center;
            font-size: 0.85rem;
        }

        .icon {
            font-size: var(--icon-size);
            color: var(--icon-color);
        }

        footer {
            font-size: 0.8rem;
            color: #777;
            text-align: center;
        }
    </style>
</head>
<body>
<header>
    <h1>Icons Library</h1>
    <div class="controls">
        <button class="toggle" id="theme-toggle">Toggle Theme</button>
        <label>
            Size:
            <select id="size-control">
                <option value="1rem">1rem (16px)</option>
                <option value="1.5rem">1.5rem (24px)</option>
                <option value="2rem">2rem (32px)</option>
                <option value="3rem" selected>3rem (48px)</option>
                <option value="4rem">4rem (64px)</option>
            </select>
        </label>
        <label>
            Color:
            <input type="color" id="color-control"/>
        </label>
    </div>
</header>

<main>
    <section class="grid">
        {{# each icons }}
            <div class="icon-card">
                <span class="icon {{ ../prefix }}-{{ name }}"></span>
                <!-- example icon from font -->
                <div class="name">{{name}}</div>
            </div>
        {{/ each }}
        <!-- Example card (templating tool will repeat) -->
    </section>
</main>

<footer>Generated by Icons Package</footer>

<script>
    const toggle = document.getElementById("theme-toggle");
    const sizeControl = document.getElementById("size-control");
    const colorControl = document.getElementById("color-control");

    const prefersDark = window.matchMedia(
            "(prefers-color-scheme: dark)",
    ).matches;

    // --- Apply initial theme ---
    if (prefersDark) {
        document.body.classList.add("dark");
        document.documentElement.style.setProperty("--icon-color", "#fff");
        colorControl.value = "#ffffff";
    } else {
        document.body.classList.add("light");
        document.documentElement.style.setProperty("--icon-color", "#000");
        colorControl.value = "#000000";
    }

    // --- Theme toggle ---
    toggle.addEventListener("click", () => {
        if (document.body.classList.contains("dark")) {
            document.body.classList.replace("dark", "light");
            document.documentElement.style.setProperty("--icon-color", "#000");
            colorControl.value = "#000000";
        } else {
            document.body.classList.replace("light", "dark");
            document.documentElement.style.setProperty("--icon-color", "#fff");
            colorControl.value = "#ffffff";
        }
    });

    // --- Size control ---
    sizeControl.addEventListener("change", (e) => {
        document.documentElement.style.setProperty(
                "--icon-size",
                e.target.value,
        );
    });

    // --- Color control ---
    colorControl.addEventListener("input", (e) => {
        document.documentElement.style.setProperty(
                "--icon-color",
                e.target.value,
        );
    });
</script>
</body>
</html>
